START=91
STOP=9
APP=open-giethoorn
ARG=service
PID_FILE=/var/run/$APP.pid

start() {
        start-stop-daemon -S -p $PID_FILE -m -b -x $APP -- $ARG
}

stop() {
        start-stop-daemon -K -n $APP -p $PID_FILE -s TERM
        rm -rf $PID_FILE
}
